@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using builderz.Practice.Model
@model SinglePostModel


@if (Model != null)
{
    <div class="sidebar-widget wow fadeInUp">
        <h2 class="widget-title">@Html.Sitecore().Field("Main_Title", Model.Item)</h2>
        <div class="category-widget">
            <ul>
                @foreach (var item in Model.Categories)
                {
                    <li>@item.Categories_Link<span>(@item.Categories_Count)</span></li>
                }
            </ul>
        </div>
    </div>
}