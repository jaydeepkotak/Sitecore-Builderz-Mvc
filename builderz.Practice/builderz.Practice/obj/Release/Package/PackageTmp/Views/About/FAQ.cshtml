
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using builderz.Practice.Model
@model FAQModel

@if (Model != null)
{
    <!-- FAQs Start -->
    <div class="faqs">
        <div class="container">
            <div class="section-header text-center">
                <p>Frequently Asked Question</p>
                <h2>You May Ask</h2>
            </div>
            <div class="row">
                @{
                    int c = 0;
                    int a = 0;
                    int cnt = 1;

                }
                <div class="col-md-6">
                    <div id="accordion-1">
                        @for (int i = 0; i < Model.FAQData.Count / 2; i++)
                        {
                            var delay = "0." + c + "s";
                            var collapse = "collapse" + cnt;
                            <div class="card wow fadeInLeft" data-wow-delay="@delay">
                                <div class="card-header">
                                    <a class="card-link collapsed" data-toggle="collapse" href="#@collapse">
                                        @Model.FAQData[i].Question
                                    </a>
                                </div>
                                <div id="@collapse" class="collapse" data-parent="#accordion-1">
                                    <div class="card-body">
                                        @Model.FAQData[i].Answer
                                    </div>
                                </div>
                            </div>
                            c++;
                            cnt++;
                        }
                    </div>
                </div>
               
                <div class="col-md-6">
                    <div id="accordion-2">
                        @for (int i = c; i < Model.FAQData.Count; i++)
                        {
                            var collapse = "collapse" + cnt;
                            var delay = "0." + a + "s";
                            <div class="card wow fadeInRight" data-wow-delay="@delay">
                                <div class="card-header">
                                    <a class="card-link collapsed" data-toggle="collapse" href="#@collapse">
                                        @Model.FAQData[i].Question
                                    </a>
                                </div>
                                <div id="@collapse" class="collapse" data-parent="#accordion-2">
                                    <div class="card-body">
                                        @Model.FAQData[i].Answer
                                    </div>
                                </div>
                            </div>
                            a++;
                            cnt++;
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- FAQs End -->
}
