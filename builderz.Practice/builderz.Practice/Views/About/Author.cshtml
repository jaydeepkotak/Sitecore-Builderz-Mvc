@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using builderz.Practice.Model
@model RenderingModel


@if (Model != null)
{
    <div class="single-bio wow fadeInUp">
        <div class="single-bio-img">
            @Html.Sitecore().Field("Author_Image", Model.Item)
        </div>
        <div class="single-bio-text">
            <h3>@Html.Sitecore().Field("Author_Name", Model.Item)</h3>

            @Html.Sitecore().Field("Author_Description", Model.Item)
        </div>
    </div>
}
