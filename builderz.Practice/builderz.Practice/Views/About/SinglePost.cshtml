
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using builderz.Practice.Model
@model SinglePostModel

<!-- Single Post Start-->
<div class="single">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="single-content wow fadeInUp">
                    @Html.Sitecore().Field("Image", Model.Item)

                    @foreach (var item in Model.SinglePost)
                    {
                        <h2>@item.Title</h2>
                        @item.Description
                    }
                </div>

                @Html.Sitecore().Placeholder("SinglePageButton")

                @Html.Sitecore().Placeholder("Author")

                @Html.Sitecore().Placeholder("relatedpost")

