                                        <a class="card-link collapsed" data-toggle="collapse" href="#@collapse">
                                            @item.Question
                                        </a>
                                    </div>
                                    <div id="@collapse" class="collapse" data-parent="#@part">
                                        <div class="card-body">
                                            @item.Answer
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            part = "accordion-2";
                            align = "fadeInRight";
                            <div id=@part>
                                <div class="card wow @align" data-wow-delay="@delay">
