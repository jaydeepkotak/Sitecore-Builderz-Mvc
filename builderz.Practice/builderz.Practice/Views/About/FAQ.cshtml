                                    </div>
                                    <div id="@collapse" class="collapse" data-parent="#@part">
                                        <div class="card-body">
                                            @item.Answer
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        cnt++;
                    }
                </div>
