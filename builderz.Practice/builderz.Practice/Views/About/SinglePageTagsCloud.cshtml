@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using builderz.Practice.Model
@model SinglePostModel


@if (Model != null)
{
    <div class="sidebar-widget wow fadeInUp">
        <h2 class="widget-title">@Html.Sitecore().Field("Main_Title", Model.Item)</h2>
        <div class="tag-widget">
            @foreach(var item in Model.TagsCloud)
                {
                    @item.Button_Link
                }
        </div>
    </div>
}